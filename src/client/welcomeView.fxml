<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="269.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.WelcomeViewController">
   <children>
      <VBox layoutX="18.0" layoutY="17.0" prefHeight="232.0" prefWidth="269.0" spacing="10.0">
         <children>
            <HBox prefHeight="21.0" prefWidth="249.0" spacing="10.0">
               <children>
                  <Label text="Hello, ">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblNameOfCurrentUser" text="Label">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label text="!">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </HBox>
            <Label text="What would you like to do?">
               <padding>
                  <Insets left="10.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Button fx:id="btnTokenize" mnemonicParsing="false" onAction="#btnTokenizePushed" text="Tokenize a bank card">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnGetCardNumber" mnemonicParsing="false" onAction="#btnGetCardNumberPushed" text="Get a card number">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnRegisterUser" mnemonicParsing="false" onAction="#btnRegisterUserPushed" text="Register a user" visible="false">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnReport" mnemonicParsing="false" onAction="#btnReportPushed" text="Get a report" visible="false">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
