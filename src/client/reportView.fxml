<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.ReportViewController">
   <children>
      <VBox layoutX="22.0" layoutY="9.0" prefHeight="182.0" prefWidth="264.0">
         <children>
            <Label text="The file with the report will">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label prefHeight="34.0" prefWidth="216.0" text="be created on the Desktop.">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <HBox prefHeight="49.0" prefWidth="497.0" spacing="10.0">
               <children>
                  <Label text="Enter file name:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtFileName" prefHeight="25.0" prefWidth="118.0" />
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="48.0" prefWidth="264.0" spacing="10.0">
               <children>
                  <Label text="Order by:" />
                  <Button fx:id="btnOrderByCardNumber" mnemonicParsing="false" onAction="#btnOrderByCardNumberPushed" text="card number" />
                  <Button fx:id="btnOrderByToken" mnemonicParsing="false" onAction="#btnOrderByTokenPushed" text="token" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
